{
    // General editor config
    "files.associations": {
        "*.h": "c++",
        "*.c": "c"
    },
    // Linter config
    "C_Cpp.default.configurationProvider": "numaru.vscode-cmake-lite",
    "C_Cpp.default.defines": [
        "RENDERER_VULKAN",
        "WINDOW_SDL2",
        "MEMORY_CHECKS",
        "USE_VK_VALIDATION_LAYERS"
    ],
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/include",
        "${workspaceFolder}/external/vma/include",
        "${workspaceFolder}/external/volk",
        "${VULKAN_SDK}/include",
        "${SDL2_PATH}/include",
    ],
}